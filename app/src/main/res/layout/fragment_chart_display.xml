<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ChartDisplay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nonArrayLabel"
            android:text="Non Array Summary Chart"
            android:padding="20dp"
            android:textSize="17sp"
            android:fontFamily="@font/open_sans_semibold"
            android:background="@color/label_bg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/hBarChart"
            android:layout_marginTop="5dp"
            android:layout_below="@id/nonArrayLabel"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>

        <TextView
            android:id="@+id/ArrayLabel"
            android:text="Array Based Chart"
            android:padding="20dp"
            android:layout_below="@id/hBarChart"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_semibold"
            android:background="@color/label_bg"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/multiLineChart"
            android:layout_below="@id/ArrayLabel"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="500dp"/>

    </RelativeLayout>

</ScrollView>